<Window x:Class="Fab.Client.Desktop.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Fab.Client.Desktop"
	xmlns:v="clr-namespace:Fab.Client.Desktop.Views"
	xmlns:vm="clr-namespace:Fab.Client.Desktop.ViewModels"
	mc:Ignorable="d"
	Title="Friggin' Awesome Browser demo" Height="450" Width="800">
	<DockPanel>
		<WrapPanel DockPanel.Dock="Top"></WrapPanel>
		<StatusBar DockPanel.Dock="Bottom"></StatusBar>
		<Grid>
			<v:ArticleView DataContext="{Binding Article}"/>
		</Grid>
		
	</DockPanel>
</Window>
