<Application x:Class="Fab.Client.Desktop.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Fab.Client.Desktop"
	xmlns:v="clr-namespace:Fab.Client.Desktop.Views"
	xmlns:vm="clr-namespace:Fab.Client.Desktop.ViewModels">
	<Application.Resources>

		<DataTemplate DataType="{x:Type vm:ArticleViewModel}">
			<v:ArticleView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:OrderedContentEntryViewModel}">
			<v:OrderedContentEntryView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:ParagraphViewModel}">
			<v:ParagraphView/>
		</DataTemplate>
	</Application.Resources>
</Application>
